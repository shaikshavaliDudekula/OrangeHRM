<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
 
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss} [%C] %-5level %M - %msg%n"/>
    </Console>
    <File name="file" filename="logs/OrangeHRM_logs.log" append="false">
    <PatternLayout pattern="%d{HH:mm:ss} [%C] %-5level %M - %msg%n"/>  
    </File>
  </Appenders>
  
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="file"/>
    </Root>
  </Loggers>
</Configuration>